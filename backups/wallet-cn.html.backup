            font-style: normal;
        }

        body {
            font-family: 'Chiron Hei HK', Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .wallet-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border: 1px solid #eaeaea;
            border-radius: 4px;
        }

        .wallet-title {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .wallet-address {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .balance-label {
            font-weight: bold;
            margin-bottom: 5px;
            display: inline-block;
        }

        .balance-amount {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .balance-amount.green {
            color: #00cc00;
        }

        .balance-amount.red {
            color: red;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
        }

        .transactions {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eaeaea;
            text-align: center;
        }

        .transaction {
            margin-bottom: 10px;
        }

        .transaction-date {
            font-size: 14px;
            color: #666666;
        }

        .transaction-details {
            font-size: 16px;
        }

        .expand-box {
            margin-top: 20px;
            padding: 10px;
            background-color: #f5f5f5;
            border: 1px solid #eaeaea;
            border-radius: 4px;
            display: none;
        }

        .expand-button {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .logout {
            position: absolute;
            top: 10px;
            right: 10px;
            color: #007bff;
            cursor: pointer;
        }

        .switch-lang {
            text-align: center;
            margin-top: 10px;
        }

        .switch-lang a {
            color: #007bff;
            text-decoration: underline;
            cursor: pointer;
        }
    </style>
    <script>
        function logout() {
            window.location.href = 'index.html';
        }

        function toggleExpandBox() {
            var expandBox = document.getElementById('expand-box');
            expandBox.style.display = (expandBox.style.display === 'none') ? 'block' : 'none';
        }

        function generateRandomDate(start, end) {
            var startDate = new Date(start).getTime();
            var endDate = new Date(end).getTime();
            var randomTimestamp = Math.floor(Math.random() * (endDate - startDate + 1) + startDate);
            return new Date(randomTimestamp);
        }

        window.addEventListener('DOMContentLoaded', function() {
            var transactions = document.querySelectorAll('.transaction');
            var startDate = '2021-01-01';
            var endDate = '2023-07-15';

            transactions.forEach(function(transaction) {
                var transactionDateElement = transaction.querySelector('.transaction-date');
                var randomDate = generateRandomDate(startDate, endDate);
                transactionDateElement.textContent = randomDate.toLocaleString();
            });

            var transactionsContainer = document.querySelector('.transactions');
            var sortedTransactions = Array.from(transactions).sort(function(a, b) {
                var aDate = new Date(a.querySelector('.transaction-date').textContent);
                var bDate = new Date(b.querySelector('.transaction-date').textContent);
                return bDate - aDate;
            });

            transactionsContainer.innerHTML = '';

            sortedTransactions.forEach(function(transaction) {
                transactionsContainer.appendChild(transaction);
            });
        });
    </script>
</head>
