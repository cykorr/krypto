<!DOCTYPE html>
<html>
<head>
    <title>Crypto Wallet</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            transition: background-color 0.5s ease;
            color: #333333;
            margin: 0;
        }
        
        body.dark-mode {
            background-color: #000000;
            color: #ffffff;
        }
        
        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #f5f5f5;
            color: #333333;
        }
        
        .top-bar.dark-mode {
            background-color: #000000;
            color: #ffffff;
        }
        
        .dark-mode-text {
            cursor: pointer;
            color: #007bff;
        }
        
        .dark-mode-text.dark-mode {
            color: #ffffff;
        }
        
        .logout-text {
            cursor: pointer;
            color: #007bff;
        }
        
        .logout-text:hover {
            text-decoration: underline;
        }
        
        .logout-text.dark-mode {
            color: #ffffff;
        }
        
        .wallet-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #dddddd;
            border: 1px solid #eaeaea;
            border-radius: 4px;
        }
        
        .wallet-container.dark-mode {
            background-color: #333333;
            color: #ffffff;
        }
        
        .wallet-title {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }
        
        .wallet-address {
            font-size: 16px;
            margin-bottom: 10px;
        }
        
        .balance-label {
            font-weight: bold;
            margin-bottom: 5px;
            display: inline-block;
        }
        
        .balance-amount {
            font-size: 24px;
            margin-bottom: 10px;
        }
        
        .balance-amount.green {
            color: #00cc00;
        }
        
        .balance-amount.red {
            color: red;
        }
        
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
        }
        
        .transactions {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eaeaea;
            text-align: center; /* Added */
        }
        
        .transaction {
            margin-bottom: 10px;
        }
        
        .transaction-date {
            font-size: 14px;
            color: #666666;
        }
        
        .transaction-details {
            font-size: 16px;
        }
        
        .expand-box {
            margin-top: 20px;
            padding: 10px;
            background-color: #f5f5f5;
            border: 1px solid #eaeaea;
            border-radius: 4px;
            display: none;
        }
        
        .expand-box.dark-mode {
            background-color: #333333;
            color: #ffffff;
        }
        
        .expand-button {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
    <script>
        function toggleDarkMode() {
            var body = document.querySelector('body');
            body.classList.toggle('dark-mode');
            var topBar = document.querySelector('.top-bar');
            topBar.classList.toggle('dark-mode');
            var darkModeText = document.querySelector('.dark-mode-text');
            darkModeText.classList.toggle('dark-mode');
            var logoutText = document.querySelector('.logout-text');
            logoutText.classList.toggle('dark-mode');
            var walletContainer = document.querySelector('.wallet-container');
            walletContainer.classList.toggle('dark-mode');
            var expandBox = document.getElementById('expand-box');
            expandBox.classList.toggle('dark-mode');
        }
        
        function toggleExpandBox() {
            var expandBox = document.getElementById('expand-box');
            expandBox.style.display = (expandBox.style.display === 'none') ? 'block' : 'none';
        }

        function generateRandomDate(start, end) {
            var startDate = new Date(start).getTime();
            var endDate = new Date(end).getTime();
            var randomTimestamp = Math.floor(Math.random() * (endDate - startDate + 1) + startDate);
            return new Date(randomTimestamp);
        }

        window.addEventListener('DOMContentLoaded', function() {
            var transactions = document.querySelectorAll('.transaction');
            var startDate = '2021-01-01';
            var endDate = '2023-07-15';

            transactions.forEach(function(transaction) {
                var transactionDateElement = transaction.querySelector('.transaction-date');
                var randomDate = generateRandomDate(startDate, endDate);
                transactionDateElement.textContent = randomDate.toLocaleString();
            });

            var transactionsContainer = document.querySelector('.transactions');
            var sortedTransactions = Array.from(transactions).sort(function(a, b) {
                var aDate = new Date(a.querySelector('.transaction-date').textContent);
                var bDate = new Date(b.querySelector('.transaction-date').textContent);
                return bDate - aDate;
            });

            transactionsContainer.innerHTML = '';

            sortedTransactions.forEach(function(transaction) {
                transactionsContainer.appendChild(transaction);
            });
        });
    </script>
</head>
